@model EntityLayer.Concreate.Message

@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_WriterPanel.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | Compose Message</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <!-- Theme style -->
    <!-- summernote -->
    <link rel="stylesheet" href="~/Tema/Tema1/plugins/summernote/summernote-bs4.css">

    <script src="~/Tema/Tema1/plugins/summernote/summernote.min.js"></script>
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

</head>
<body class="hold-transition sidebar-mini">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">

        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-3">
                    @Html.Partial("MessageMenu")
                </div>
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Yemi Mesaj Sayfası</h3>
                        </div>
                        <!-- /.card-header -->
                        @using (Html.BeginForm("NewMessage", "WriterPanelMessage", FormMethod.Post))
                        {
                            <div class="card-body">
                                <div class="form-group">
                                    @*<input class="form-control" placeholder="Kime:" name="ReceiverMail">*@
                                    @Html.TextBoxFor(x => x.ReceiverMail, new { placeholder = "Kime", @class = "form-control" })
                                    @Html.ValidationMessageFor(x => x.ReceiverMail)

                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Konu:" name="Subject">
                                    @Html.ValidationMessageFor(x => x.Subject)

                                </div>
                                <div class="form-group">
                                    @Html.TextAreaFor(x => x.MessageContent, new { placeholder = "metin girin", @class = "form-control" })

                                    @*<input id="compose-textarea" class="form-control" name="MessageContent" placeholder="metin girin" />*@
                                    @Html.ValidationMessageFor(x => x.MessageContent)



                                </div>
                                <div class="form-group">
                                    <div class="btn btn-default btn-file">
                                        <i class="fas fa-paperclip"></i> Dosya
                                        <input type="file" name="attachment">
                                    </div>
                                    <p class="help-block">Max. 32MB</p>
                                </div>
                            </div>

                            <!-- /.card-body -->
                            <div class="card-footer">
                                <div class="float-right">
                                    @*<button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i> Taslaklara Kaydet</button>*@
                                    <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i> Gönder</button>
                                </div>
                                <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> İptal</button>
                            </div>
                        }
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    <!-- /.content-wrapper -->
    <!-- Control Sidebar -->
    <!-- /.control-sidebar -->
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/Tema/Tema1//plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Tema/Tema1/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Tema/Tema1/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Tema/Tema1/dist/js/demo.js"></script>
    <!-- Summernote -->
    <script src="~/Tema/Tema1/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- Page Script -->
    <script>
        $(function () {
            //Add text editor
            $('#compose-textarea').summernote()
        })
    </script>
</body>
</html>





