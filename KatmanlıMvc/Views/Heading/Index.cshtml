@model List<EntityLayer.Concreate.Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<html>

<body class="hold-transition sidebar-mini">
    @{string color = ""; }
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Başlık Sayfası</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Proje İşlemleri</h3>
                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 3%">
                                #
                            </th>
                            <th style="width: 20%">
                                Başlık Adı
                            </th>
                            <th style="width: 20%">
                                Oluşturan Yazar
                            </th>
                            <th style="width: 19%" class="text-center">
                                Kategori
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {
                        if (item.Category.CategoryName == "tiyatro")
                        {
                            color = "badge badge-Primary";
                        }
                        if (item.Category.CategoryName == "eğitim")
                        {
                            color = "badge badge-secondery";
                        }
                        if (item.Category.CategoryName == "kitap")
                        {
                            color = "badge badge-warning";
                        }
                        if (item.Category.CategoryName == "spor")
                        {
                            color = "badge badge-info";
                        }
                        if (item.Category.CategoryName == "film")
                        {
                            color = "badge badge-danger";
                        }
                        else
                        {
                            color = "badge badge-pill";
                        }
                        <tbody>
                            <tr>
                                <td>
                                    #
                                </td>
                                <td>
                                    <a>
                                        @item.HeadingName
                                    </a>
                                    <br />
                                    <small>
                                        @item.Headingdate.ToShortDateString()
                                    </small>
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="~/Tema/Tema1/dist/img/avatar.png">
                                        </li>
                                    </ul>
                                </td>

                                <td class="project-state">
                                    <span class="@color;">@item.Category.CategoryName</span>
                                </td>


                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="~/Content/Index/@item.HeadingID">
                                        <i class="fas fa-folder">
                                        </i>
                                        Başlıklar
                                    </a>
                                    <button class="btn btn-info btn-sm" data-toggle="modal" data-target="modalAdd" id="@item.HeadingID">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </button>
                                    <a class="btn btn-danger btn-sm" href="#">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>

                        </tbody>

                    }
                </table>
                <a class="btn btn-info" href="~/Heading/HeadingAdd"> YEni</a>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>
</body>
</html>

