@model List<EntityLayer.Concreate.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkında</h2>


<table class="table table-active">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>Durum</th>
        <th>Aktif Yap</th>
        <th>Pasif Yap</th>
        <th>aktif/Pasif Yap</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AboutID</td>
            <td>@item.AboutDetails1</td>        
            @if (item.AboutStatus == false)
            {
                <td>pasif</td>
            }
            else
            {
                <td>aktif</td>
            }
            @if (item.AboutStatus == false)
            {
                <td><a class="btn btn-success" href="/About/EditAbout/@item.AboutID">aktif yap</a></td>
                <td><a class="btn btn-default">pasif yap</a></td>
            }
            else
            {
                <td><a class="btn btn-default">aktif yap</a></td>
                <td><a href="/About/EditAbout/@item.AboutID" class="btn btn-danger">pasif yap</a></td>
            }
            @if (item.AboutStatus == false)
            {
                <td><a class="btn btn-success" href="/About/EditAbout/@item.AboutID">aktif yap</a></td>

            }
            else
            {
                <td><a href="/About/EditAbout/@item.AboutID" class="btn btn-danger">pasif yap</a></td>

            }
        </tr>
    }
</table>
<a class="btn btn-info" data-toggle="modal" data-target="#Modal1">yeni</a>
@Html.Action("AboutAdd", "About")